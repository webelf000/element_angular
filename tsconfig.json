{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "stripInternal": true,
    "outDir": "release/",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "genDir": "./temp/"
  },
  "exclude": [
    "ex",
    "release",
    "bundle",
    "build"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}